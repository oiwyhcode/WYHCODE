/**
  * @brief This function handles Non maskable interrupt.
  */
void NMI_Handler(void)
{
  /* USER CODE BEGIN NonMaskableInt_IRQn 0 */

  /* USER CODE END NonMaskableInt_IRQn 0 */
  /* USER CODE BEGIN NonMaskableInt_IRQn 1 */
   while (1)
  {
  }
  /* USER CODE END NonMaskableInt_IRQn 1 */
}

/**
  * @brief This function handles Hard fault interrupt.
  */
void HardFault_Handler(void)
{
  /* USER CODE BEGIN HardFault_IRQn 0 */
	   __asm volatile (
	        // 收集寄存器信息（见上一个回答）
	        "BX R2"
	    );
	   void HardFault_Handler_C(uint32_t *fault_args) {
	       uint32_t pc = fault_args[6];
	       uint32_t lr = fault_args[5];
	       uint32_t psr = fault_args[7];
	       uint32_t r0 = fault_args[0];
	       uint32_t r1 = fault_args[1];
	       uint32_t r2 = fault_args[2];
	       uint32_t r3 = fault_args[3];

	       uint32_t hfsr = *(volatile uint32_t *)(0xE000ED2C);
	       uint32_t dfsr = *(volatile uint32_t *)(0xE000ED30);
	       uint32_t mmfar = *(volatile uint32_t *)(0xE000ED34);
	       uint32_t bfar = *(volatile uint32_t *)(0xE000ED38);
	       uint32_t cfsr = *(volatile uint32_t *)(0xE000ED28);

	       // 打印故障信息（实际应用中可能通过串口、LED或存储到Flash）
	       printf("\n\n=== HardFault Detected ===\n");
	       printf("R0=0x%08X, R1=0x%08X, R2=0x%08X, R3=0x%08X\n", r0, r1, r2, r3);
	       printf("LR=0x%08X, PC=0x%08X, PSR=0x%08X\n", lr, pc, psr);
	       printf("HFSR=0x%08X, CFSR=0x%08X\n", hfsr, cfsr);
	       printf("DFSR=0x%08X, MMFAR=0x%08X, BFAR=0x%08X\n", dfsr, mmfar, bfar);

	       // 分析故障原因
	       printf("\nFault Analysis:\n");
	       if (hfsr & (1 << 1)) printf("* VECTTBL: 向量表错误\n");
	       if (hfsr & (1 << 30)) printf("* FORCED: 硬故障由其他异常触发\n");

	       if (cfsr & (1 << 0)) printf("* IACCVIOL: 指令访问违规\n");
	       if (cfsr & (1 << 1)) printf("* DACCVIOL: 数据访问违规\n");
	       if (cfsr & (1 << 3)) printf("* MUNSTKERR: 异常返回时栈操作错误\n");
	       if (cfsr & (1 << 4)) printf("* MSTKERR: 异常进入时栈操作错误\n");

	       if (cfsr & (1 << 8)) printf("* IBUSERR: 指令总线错误\n");
	       if (cfsr & (1 << 9)) printf("* PRECISERR: 精确数据总线错误\n");
	       if (cfsr & (1 << 10)) printf("* IMPRECISERR: 不精确数据总线错误\n");
	       if (cfsr & (1 << 11)) printf("* UNSTKERR: 异常返回时总线错误\n");
	       if (cfsr & (1 << 12)) printf("* STKERR: 异常进入时总线错误\n");

	       if (cfsr & (1 << 16)) printf("* UNDEFINSTR: 未定义指令错误\n");
	       if (cfsr & (1 << 17)) printf("* INVSTATE: 无效状态错误\n");
	       if (cfsr & (1 << 19)) printf("* DIVBYZERO: 除以零错误\n");

	       // 存储故障信息到Flash（可选）
	       // save_fault_info_to_flash(pc, lr, hfsr, cfsr, mmfar, bfar);

	       // 闪烁LED或触发其他调试信号
	       while(1) {
	           // 闪烁LED表示硬故障
	           HAL_GPIO_TogglePin(LED_GPIO_Port, LED_Pin);
	           HAL_Delay(500);
	       }
	   }
  /* USER CODE END HardFault_IRQn 0 */
  while (1)
  {
    /* USER CODE BEGIN W1_HardFault_IRQn 0 */
    /* USER CODE END W1_HardFault_IRQn 0 */
  }
}

